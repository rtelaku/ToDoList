<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextArea?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rigeitatelaku.todolist.DialogController"
            prefHeight="400.0" prefWidth="600.0">
<headerText>
    <!-- We could put intstructions here -->
</headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Short Description: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="shortDescriptionField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Details: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="detailsField" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true"/>
            <Label text="Deadline: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="deadlineField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
